  :css
    #floweditor-feedback {
      display: flex;
      gap: 12px;
      flex-direction: column;
      align-items: flex-end;
      justify-content: flex-end;
      position: fixed;
      bottom: 150px;
      right: 16px;
      z-index: 9999;

      & .launcher {
        position: relative;
        border-radius: 600px;
        border: 1px solid #E2E6ED;
        background: #FFF;
        box-shadow: 0px 12px 34px 0px rgba(0, 0, 0, 0.04);
        width: 60px;
        height: 60px;

        & :hover {
          cursor: pointer;
        }

        &::before {
          content: '';
          position: absolute;
          width: 12px;
          height: 12px;
          background-color: #009E96;
          border-radius: 600px;
          right: 3px;
          top: 3px;
        }

        & img {
          padding: 16px;
        }
      }

      & .content {
        width: 500px;
        padding: 16px;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        border-radius: 4px;
        background: #F9F9F9;

        /* Shadow / Separated */
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.08);

        & .rating {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 16px;
          align-self: stretch;
        }

        & .feedback {
          flex-direction: column;
          align-items: center;
          gap: 16px;
          align-self: stretch;
        }

        & .header {
          position: relative;
          display: flex;
          justify-content: center;
          width: 100%;

          color: #3B414D;
          text-align: center;
          text-wrap: balance;

          /* Lato / Black / Body Large */
          font-family: Lato;
          font-size: 16px;
          font-style: normal;
          font-weight: 900;
          line-height: 24px;

          & .close-icon {
            position: absolute;
            right: 0;
            background-color: #4E5666;
            opacity: 1;
            cursor: pointer;
          }
        }

        & .options {
          display: flex;
          gap: 8px;

          & .option {
            display: flex;
            width: 67px;
            height: 67px;
            padding: 8px;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 10px;

            color: var(--neutral-black, #272B33);
            text-align: center;

            /* Lato/Regular/Body Medium */
            font-family: Lato;
            font-size: 12px;
            font-style: normal;
            font-weight: 400;
            line-height: 20px;
            border-radius: 4px;
            background: rgba(249, 249, 249, 1);
            -webkit-transition: all .3s ease-out;
            -moz-transition: all .3s ease-out;
            -o-transition: all .3s ease-out;
            transition: all .3s ease-out;;

            &:hover {;
              background: rgba(226, 230, 237, 1);
              cursor: pointer;
            }

            &.selected {
              border: 1px solid #00A49F;
              background: #EEFFFC;
            }
          }

          & img {
            width: 24px;
            height: 24px;
          }
        }

        & .opaque {
          opacity: 0;
        }

        & .bottom {
          color: var(--neutral-black, #272B33);
          text-align: center;

          /* Lato/Regular/Body Medium */
          font-family: Lato;
          font-size: 12px;
          font-style: normal;
          font-weight: 400;
          line-height: 20px;
        }

        & #feedback-textarea {
          margin-bottom: 8px;

          outline: none;
          height: 80px;
          width: 100%;
          resize: none;
          box-sizing: border-box;
          padding: 8px;
          border-radius: 4px;
          border: 1px solid #E2E6ED;
          background: #FFF;

          color: #4E5666;
          font-family: Lato;

          &::placeholder {
            color: #67738B;
            font-family: Lato;
            font-size: 14px;
            line-height: 22px;
            opacity: 0.7;
          }

          &:focus {
            border-color: #9CACCC;
            &::placeholder {
              color: #D0D3D9;
            }
          }
        }

        & .buttons {
          display: flex;
          gap: 32px;

          & #send-feedback {
            background: #00A49F;

            &:hover {
              opacity: 0.8;
            }
          }

          & #skip-feedback {
            border: 1px solid transparent;

            &:hover {
              border: 1px solid #E2E6ED;
            }
          }
        }
      }
    }

    .slide-in-left {
      -webkit-animation: slide-in-left 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
              animation: slide-in-left 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
    }
    @-webkit-keyframes slide-in-left {
      0% {
        -webkit-transform: translateX(-200px);
                transform: translateX(-200px);
        opacity: 0;
      }
      100% {
        -webkit-transform: translateX(0);
                transform: translateX(0);
        opacity: 1;
      }
    }
    @keyframes slide-in-left {
      0% {
        -webkit-transform: translateX(-200px);
                transform: translateX(-200px);
        opacity: 0;
      }
      100% {
        -webkit-transform: translateX(0);
                transform: translateX(0);
        opacity: 1;
      }
    }

    .fade-in {
      -webkit-animation: fade-in 0.5s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
              animation: fade-in 0.5s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
    }
    @-webkit-keyframes fade-in {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
    @keyframes fade-in {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    .fade-out {
      -webkit-animation: fade-out 0.3s ease-out both;
              animation: fade-out 0.3s ease-out both;
    }
    @-webkit-keyframes fade-out {
      0% {
        opacity: 1;
      }
      100% {
        opacity: 0;
      }
    }
    @keyframes fade-out {
      0% {
        opacity: 1;
      }
      100% {
        opacity: 0;
      }
    }


